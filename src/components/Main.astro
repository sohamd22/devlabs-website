---
import WrappedText from './text/WrappedText.astro';
import LinkButton from './LinkButton.astro';
import HeadingBig from './text/HeadingBig.astro';
import Highlight from './text/Highlight.astro';
import GradientBlob from './GradientBlob.astro';
---

<section class="container mx-auto relative md:pl-6 md:min-h-screen grid md:grid-cols-5 grid-cols-1 border border-dashed border-gray-700 mb-24">
    <GradientBlob top="-300px" left="-450px" right='' scale="1.5" />
    
    <div class="md:min-h-screen relative col-span-3 md:p-0 px-12 py-20 md:w-5/6">
        <div class="md:min-h-screen md:pt-0 pt-16 flex flex-col md:gap-16 gap-12 justify-center md:items-start items-center md:text-left text-center">
            <div class="flex flex-col gap-6 md:items-start items-center">
                <WrappedText size="normal" className=''>next meeting on sep 12</WrappedText>  
                <HeadingBig>want to learn how to <Highlight>build products</Highlight> people love?</HeadingBig>
            </div>
            <LinkButton>join devlabs (it's fun)</LinkButton>
        </div>
    </div>

    <div class="bg-gradient-to-r from-orange-500 to-orange-300 bg-clip-padding md:sticky md:top-0 md:h-screen box-border overflow-hidden col-span-2 border border-dashed border-gray-700">
        <img src="/devlabs-website/main-2.gif" alt="" class="min-h-full min-w-full object-cover mix-blend-multiply">
    </div>
</section>