---
import WrappedText from './text/WrappedText.astro';
import LinkButton from './LinkButton.astro';
import Heading from './text/HeadingBig.astro';
import Paragraph from './text/Paragraph.astro';
import Highlight from './text/Highlight.astro';
import GradientBlob from './GradientBlob.astro';
---

<section id="schedule" class="container mx-auto relative md:pl-6 grid md:grid-cols-5 grid-cols-1 border border-dashed border-gray-700 mb-24">
    <GradientBlob top="-300px" left="-450px" right='' scale="1.5" />
    
    <div class="relative col-span-3 md:px-0 md:py-32 px-12 py-20 md:w-5/6">
        <div class="flex flex-col md:gap-16 gap-12 justify-center md:items-start items-center md:text-left text-center">
            <div class="flex flex-col gap-6 md:items-start items-center">
                <WrappedText size="normal" className=''>august 28 | 6:30-7:30pm | ecg 101</WrappedText>  
                <Heading>semester kickoff: <Highlight>launch into learning</Highlight></Heading>
                <Paragraph>connect with like-minded peers who share your interests and get ready for a productive term ahead.</Paragraph>
            </div>
            <LinkButton link="https://asu.campuslabs.com/engage/event/10293556">rsvp to the event</LinkButton>
        </div>
    </div>

    <div class="bg-gradient-to-r from-orange-500 to-orange-300 bg-clip-padding md:sticky md:top-0 box-border overflow-hidden col-span-2 border border-dashed border-gray-700">
        <img src="/devlabs-website/events/Semester_Kickoff.jpg" alt="" class="min-h-full min-w-full object-cover mix-blend-multiply">
    </div>
</section>